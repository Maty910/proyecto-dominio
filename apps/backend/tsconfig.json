{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "@hotel/domain": ["../../domain/src"],
      "@hotel/domain/*": ["../../domain/src/*"],
      "@hotel/infrastructure": ["../../infrastructure/src"],
      "@hotel/infrastructure/*": ["../../infrastructure/src/*"]
    },
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "dist",
    "**/__tests__/**",
    "**/*.test.ts"
  ]
}