{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@hotel/domain/*": ["../../domain/src/*"],
      "@hotel/infrastructure/*": ["../../infrastructure/src/*"],
      "@hotel/infrastructure/repositories/*": ["../../infrastructure/src/persistence/postgres/repositories/*"]
    },
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["src"],
  "references": [
    { "path": "../../domain" },
    { "path": "../../infrastructure" }
  ]
}